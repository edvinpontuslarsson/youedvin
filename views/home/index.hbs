{{#if emptySearch}}
<p>No matches found</p>
{{/if}}
{{#each videoArr}}
<div>
    <a href="/play/{{this.fileName}}" class="indexVideoIcon">
        <img src="/img/icons/film.png" alt="Video">
    </a>
    <p class="indexVideoLink">
        <a href="/play/{{this.fileName}}">{{this.title}}</a><br>
        Uploaded by {{this.createdBy}} on {{this.createdAt}}
    </p>
</div>
{{/each}}
{{#if addPage}}
<div id="turnPage">
    <div class="turnPageItem" id="viewMore">
        View more:
    </div>
    <div class="turnPageItem" id="switchPage">
    {{#if prevPage}}
    <form action="/index/{{prevPage}}" id="prevPage">
        <input type="submit" value="&lt; prev" class="turnPageBtn">
    </form>
    {{/if}}
    {{#if nextPage}}
    <form action="/index/{{nextPage}}">
        <input type="submit" value="next &gt;" class="turnPageBtn">
    </form>
    {{/if}}
    </div>
</div>
{{/if}}