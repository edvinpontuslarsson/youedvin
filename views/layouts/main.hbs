<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>youEdvin</title>
    <link rel="icon" type="image/png" href="/img/icons/favicon.png">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/menu.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
</head>
<body>
    <section id="page">
        <!--  -->
    {{#if username }}
        <header id="mainMenu">
            <div class="menuItem" id="menu0">
                <a href="/" class="menuLink">Home</a>
            </div>
            <div class="menuItem" id="menu1">
                <a href="/surprise" class="menuLink">Surprise me!</a>
            </div>
            <div class="menuItem" id="menu2">
                <a href="/upload" class="menuLink">Upload</a>
            </div>
            <!-- Search -->
            <div class="menuItem" id="menu3">
                <form action="/search" method="GET">
                        <input type="text" name="search" placeholder="Search..." id="searchField">
                        <button><img src="/img/icons/search.png" alt="Search" id="searchIcon"></button>
                </form>
            </div>
            <div class="menuItem" id="menu4">
                <a href="/logout" class="menuLink">Log out</a>
            </div>
          </header>
    {{else}}
        <header id="mainMenu">
            <div class="menuItem" id="menu0">
                <a href="/" class="menuLink">Home</a>
            </div>
            <div class="menuItem" id="menu1">
                <a href="/surprise" class="menuLink">Surprise me!</a>
            </div>
            <!-- Search -->
            <div class="menuItem" id="menu3">
                <form action="/search" method="GET">
                        <input type="text" name="search" placeholder="Search..." id="searchField">
                        <button><img src="/img/icons/search.png" alt="Search" id="searchIcon"></button>
                </form>
            </div>
            <div class="menuItem" id="menu4">
                <a href="/login" class="menuLink">Sign in</a>
            </div>
        </header>
    {{/if}}
    <section id="mainSection">
        <!-- Flash messages -->
        <p>{{>flash}}</p>
        <!-- Content -->
        {{{ body }}}
    </section>
    <footer id="mainFooter">
        <div class="footerItem" id="iconCredit">
        </div>
        {{#if username }}
           <div class="footerItem" id="userFooter">
            Logged in as: <br> 
            {{ username }}
            </div> 
            <div class="footerItem" id="userSettings">
            <a href="/useredit/{{ username }}">Account Settings</a>
            </div>
        {{/if}}
    </footer>
    </section>
</body>
</html>