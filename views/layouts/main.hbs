<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>youEdvin</title>
    <link rel="icon" type="image/png" href="/img/faviconTV.png">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/menu.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
</head>
<body>
    <section id="page">
        <!--  -->
    {{#if username }}
        <header id="mainMenu">
            <div class="menuItem" id="menu1">
                <a href="/" class="menuLink">Home</a>
            </div>
            <div class="menuItem" id="menu2">
                <a href="/logout" class="menuLink">Log out</a>
            </div>
            <div class="menuItem" id="menu3">
                <a href="/upload" class="menuLink">Upload!</a>
            </div>
            <!-- Search -->
            <div class="menuItem" id="menu4">
                <form action="/search" method="GET">
                    <input type="text" name="search" placeholder="Search..." id="searchField">
            </div>
            <div class="menuItem" id="menu5">
                    <input type="image" src="/img/search.png" id="searchBtn">
                </form>
            </div>
            <div class="menuItem" id="menu6">
                {{ username }}
            </div>
          </header>
    {{else}}
        <header id="mainMenu">
            <div class="menuItem" id="menu1">
                <a href="/" class="menuLink">Home</a>
            </div>
            <div class="menuItem" id="menu2">
               <a href="/login" class="menuLink">Log in!</a> 
            </div>
            <div class="menuItem" id="menu3">
                <a href="/signup" class="menuLink">Sign up!</a>
            </div>
            <!-- Search -->
            <div class="menuItem" id="menu4">
                <form action="/search" method="GET">
                    <input type="text" name="search" placeholder="Search..." id="searchField">
            </div>
            <div class="menuItem" id="menu5">
                    <input type="image" src="/img/search.png" id="searchBtn">
                </form>
            </div>
        </header>
    {{/if}}
    <section id="mainSection">
        <!-- Flash messages -->
        <p>{{>flash}}</p>
        <!-- Content -->
        {{{ body }}}
    </section>
    <footer id="mainFooter">
        <div class="footerItem" id="iconCredit">
            Icons by: <a href="https://icons8.com/">icons8</a>
        </div>
    </footer>
    </section>
</body>
</html>